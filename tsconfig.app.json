{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "**/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
